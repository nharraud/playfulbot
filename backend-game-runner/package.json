  "scripts": {
    "test": "jest",
    "build": "rm -rf build && tsc && tsc-alias && cp ./src/graphqlSchema.graphql ./build/graphqlSchema.graphql && mkdir -p build/grpc/proto/playfulbot/v0 && cp src/grpc/proto/playfulbot/v0/playfulbot_v0.proto build/grpc/proto/playfulbot/v0/playfulbot_v0.proto",
    "dev": "NODE_ENV=development PLAYFULBOT_CONFIG=../game-config.json node --inspect=127.0.0.1:9228 --require dotenv-flow/config build/index.js | npx pino-pretty",
    "debug": "NODE_ENV=development PLAYFULBOT_CONFIG=../game-config.json nodemon --inspect=127.0.0.1:9228 --require dotenv-flow/config src/index.ts",
    "lint": "eslint src",
    "lint-fix": "eslint --fix src",
    "gen-graphql": "graphql-codegen --config graphql-codegen.yml",
    "gen-grpc": "rm -rf ./src/grpc/proto/types && proto-loader-gen-types --longs=String --enums=String --defaults --oneofs --grpcLib=@grpc/grpc-js --outDir=src/grpc/proto/types src/grpc/proto/**/**/*.proto"
