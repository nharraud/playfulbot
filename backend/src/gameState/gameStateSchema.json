{
  "$id": "https://playfulbot.com/gamestate.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PlayfulBotGameState",
  "type": "object",
  "properties": {
    "end": {
      "type": "boolean"
    },
    "players": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "points": {
            "type": "integer",
            "default": 0
          },
          "playing": {
            "type": "boolean"
          }
        },
        "additionalProperties": true
      }
    }
  }
}