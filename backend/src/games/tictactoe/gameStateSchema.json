{
  "$id": "https://playfulbot.com/tictactoe.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TicTacToe",
  "type": "object",
  "properties": {
    "grid": {
      "type": "array",
      "minItems": 9,
      "maxItems": 9,
      "items": {
        "type": "string",
        "enum": ["", "x", "o"]
      }
    },
    "players": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string",
            "enum": ["x", "o"]
          }
        }
      }
    }
  }  
}